<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>

    <!-- Console Appender -->
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout
        pattern="Application=KatavuccolService %d{yyyy-MMM-dd HH:mm:ss a} [%t] %-5level %logger{36} - %msg%n" />
    </Console>

    <!-- File Appender -->
    <File name="File" fileName="/home/sajanmje/sajan/gitrepo/app.log">
      <PatternLayout
        pattern="Application=KatavuccolService %d{yyyy-MMM-dd HH:mm:ss a} [%t] %-5level %logger{36} - %msg%n" />
    </File>

  </Appenders>
  <Loggers>
    <Root level="trace">
      <!--  <AppenderRef ref="Console" />-->
      <AppenderRef ref="File" />
    </Root>
  </Loggers>
</Configuration>